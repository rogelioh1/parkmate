<StackPane focusTraversable="true" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.parkmate.LoginController">
   <children>
      <HBox alignment="CENTER" focusTraversable="true" prefHeight="830.0" prefWidth="501.0">
         <children>
            <VBox alignment="CENTER" prefHeight="838.0" prefWidth="501.0">
               <children>
                  <VBox prefHeight="76.0" prefWidth="501.0" />
                  <VBox alignment="CENTER" focusTraversable="true" prefHeight="326.0" prefWidth="501.0">
                     <children>
                        <HBox alignment="CENTER" prefHeight="156.0" prefWidth="501.0">
                           <children>
                              <ImageView fitHeight="327.0" fitWidth="501.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@parkmate_logo_1.png" />
                                 </image>
                                 <viewport>
                                    <Rectangle2D />
                                 </viewport>
                              </ImageView>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox focusTraversable="true" prefHeight="449.0" prefWidth="514.0">
                     <children>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <TextField fx:id="username_textfield" prefHeight="55.0" prefWidth="229.0" promptText="Enter Username:" stylesheets="@loginstyle.css">
                                 <font>
                                    <Font size="20.0" />
                                 </font>
                              </TextField>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="110.0" prefWidth="514.0">
                           <children>
                              <Button fx:id="sign_in_button" mnemonicParsing="false" onAction="#openmainmenu" prefHeight="48.0" prefWidth="229.0" style="-fx-font-size: 20; -fx-background-color: DE4B2A;" text="Sign In" textFill="WHITE" HBox.hgrow="NEVER">
                                 <font>
                                    <Font size="20.0" />
                                 </font>
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
   </children>
